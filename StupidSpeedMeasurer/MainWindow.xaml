<Window x:Class="SpeedTestGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Very Stupid Speed Measurer" Height="174.645" Width="713">
    <Grid Margin="0,0,0,11">
        <Grid.RowDefinitions>
            <RowDefinition Height="69*"/>
            <RowDefinition Height="107*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="122*"/>
            <ColumnDefinition Width="583*"/>
        </Grid.ColumnDefinitions>
        <TextBox Name="urlBox" Margin="10" TextWrapping="Wrap" Text="http://mirror.corbina.net/ubuntu-cd/15.04/ubuntu-15.04-desktop-amd64.iso" FontFamily="Buxton Sketch" FontSize="24" TextDecorations="Underline" FontStyle="Italic" Foreground="#FF0202FF" Grid.ColumnSpan="2"/>
        <Button Name="startBtn" Content="Measure" Margin="10,0,0,10" Click="Button_Click" FontFamily="Lucida Handwriting" Foreground="Red" FontSize="21.333" Grid.Row="1" RenderTransformOrigin="0.5,0.5"/>
        <ProgressBar Margin="0,0,10,10" Name="downBar" Grid.Column="1" Grid.Row="1">
        </ProgressBar>
        <TextBlock Margin="0,0,10,10" Grid.Column="1" Grid.Row="1" FontFamily="Kristen ITC" FontSize="48" TextAlignment="Center" Name="infoBlk"></TextBlock>
    </Grid>
</Window>
